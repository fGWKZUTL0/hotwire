<div id="<%= dom_id chick %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= chick.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Age:</strong>
    <%= chick.age %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this chick", chick, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this chick', edit_chick_path(chick), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
